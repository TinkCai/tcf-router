{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": [
      "ES6",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["/dist/**/*", "node_modules"]
}
