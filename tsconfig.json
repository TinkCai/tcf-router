{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "types": [
      "node"
    ],
    "lib": [
      "ES6"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
