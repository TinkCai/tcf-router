{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": [
      "ES6",
      "dom"
    ],
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": ["/dist/**/*", "node_modules", "public"]
}
